{
  "compilerOptions": {
    "declaration": true, // 生成 .d.ts 类型声明
    "declarationMap": true, // 生成 .d.ts.map 方便调试
    "emitDeclarationOnly": true, // 只生成 .d.ts，不编译 JS
    "outDir": "dist", //  类型声明文件输出目录
    "strict": false,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["./src/global.d.ts"],
    "paths": {}
  },
  "include": ["src"]
}
